<idea-plugin>
    <id>me.haroldmartin.intellijbuildwebhooknotifier</id>
    <name>Build Webhook Notifier</name>
    <vendor email="me@haroldmartin.me" url="https://github.com/hbmartin/">Harold Martin</vendor>

    <description><![CDATA[
        Call a configurable on build start, error, or success. Useful for sending push notifications, blink lights, etc.
    ]]></description>

    <!-- Product and plugin compatibility requirements -->
    <!-- https://plugins.jetbrains.com/docs/intellij/plugin-compatibility.html -->
    <depends>com.intellij.modules.platform</depends>
    <depends>com.intellij.modules.lang</depends>
    <depends optional="true" config-file="android_config.xml">org.jetbrains.android</depends>

<!--    <extensions defaultExtensionNs="com.intellij">-->
<!--        <applicationService serviceImplementation="me.haroldmartin.intellijbuildwebhooknotifier.services.MyApplicationService"/>-->
<!--        <projectService serviceImplementation="me.haroldmartin.intellijbuildwebhooknotifier.services.MyProjectService"/>-->
<!--    </extensions>-->

<!--    <applicationListeners>-->
<!--        <listener class="me.haroldmartin.intellijbuildwebhooknotifier.listeners.MyProjectManagerListener"-->
<!--                  topic="com.intellij.openapi.project.ProjectManagerListener"/>-->
<!--    </applicationListeners>-->

    <extensions defaultExtensionNs="com.intellij">
        <compiler.task
                execute="BEFORE"
                implementation="me.haroldmartin.intellijbuildwebhooknotifier.listeners.BeforeCompileListener"/>

        <applicationConfigurable
                parentId="tools"
                instance="me.haroldmartin.intellijbuildwebhooknotifier.settings.AppSettingsConfigurable"
                id="me.haroldmartin.intellijbuildwebhooknotifier.AppSettingsConfigurable"
                displayName="Webhooks"/>
        <applicationService
                serviceImplementation="me.haroldmartin.intellijbuildwebhooknotifier.settings.AppSettingsState"/>
    </extensions>

    <project-components>
        <component>
            <implementation-class>me.haroldmartin.intellijbuildwebhooknotifier.listeners.BuildListener</implementation-class>
        </component>
    </project-components>
</idea-plugin>
